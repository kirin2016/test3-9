<main>
  
  <h1>Editing Book</h1>
  
  
  <% if @book.errors.any? %>
  
  <div class="error">
    <div class="e-head">
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </div>
    <div class="e-body">
      <% @book.errors.full_messages.each do |message| %>
        <%= message %></br>
      <% end %>
    </div>
  </div>
  
  <% end %>

  <%= form_with model:@book, local:true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div class="submit"><%= f.submit 'Update Book' %></div>
  
    <div>
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
    </div>
  
  <% end %>
  
</main>

