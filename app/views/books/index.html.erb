<main>
  
  <h1><strong>Books</strong></h1>
  
  <table>
    
    <thead>
      <tr>
        <th><strong>Title</strong></th>
        <th><strong>Body</strong></th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete %>
        </tr>
      <% end %>
    </tbody>
    
    
  </table>
    
  <h2>New book</h2>
  
  <% if @book.errors.any? %>
  
  <div class="error">
    <div class="e-head">
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </div>
    <div class="e-body">
      <% @book.errors.full_messages.each do |message| %>
        ãƒ»<%= message %></br>
      <% end %>
    </div>
  </div>
    
  <% end %>
  
  <%= form_with model:@book, url:books_path, local:true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div class="submit"><%= f.submit 'Create Book' %></div>

  <% end %>
    
    

</main>
